@model Cart

<div class="">
	@if (Model.Lines.Count() > 0)
	{
					<small class="navbar-text">
						<b>Your cart: </b>
			@if (Model.Lines.Sum(x => x.Quantity) > 1)
			{
				@(Model.Lines.Sum(x => x.Quantity) + " products")
			}
			else
			{
				@(Model.Lines.Sum(x => x.Quantity) + " product")
			}
			@Model.ComputeTotalValue().ToString("C2")
					</small>
	}

	<a class="btn btn-sm btn-secondary navbar-btn"
	asp-controller="Cart" asp-action="Index"
	asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
		<i class="fa fa-shopping-cart"></i>
	</a>
</div>